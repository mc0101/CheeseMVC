@model List<CheeseMVC.Models2.Cheese>

    




<h1>My Cheese</h1>




@if (Model.Count == 0)
{
   <p>No cheeses yet!</p> 
}

   <table class="table">
       @foreach (var cheese in Model)
    {
       <tr>
           <td>@cheese.Name</td>
           <td>@cheese.Description</td>
           <td>@cheese.Category.Name</td>
       </tr>
}


   </table>

<p><a asp-controller="Cheese" asp-action="Add">Add</a>  |  <a asp-controller="Cheese" asp-action="Remove">Remove</a></p>